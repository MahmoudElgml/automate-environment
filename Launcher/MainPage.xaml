<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Launcher.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="5"
            VerticalOptions="Center">

            <Frame Margin="10"
       BorderColor="Black"
       CornerRadius="15"
       HeightRequest="60"
       WidthRequest="250"
       IsClippedToBounds="True"
       HorizontalOptions="Center"
       VerticalOptions="Center">
                <Image Source="apg_logo.png"
         Aspect="AspectFill"
         Margin="-20"
         HeightRequest="70"
         WidthRequest="250" />
            </Frame>
            <Label
                Text="APG Launcher"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="16"
                HorizontalOptions="Center" />
            
            <CollectionView x:Name="collectionView"
                            
                            >
                <CollectionView.ItemTemplate>

                    <DataTemplate>
                        <StackLayout
                             Orientation="Horizontal" 
                             VerticalOptions="Start">
                            <Label
                                       Text="{Binding serviceName}"
                                       VerticalOptions="Center" />
                            <CheckBox IsChecked="False"  
                                 />

                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                
            </CollectionView>


            <Label 
                Text=""
                Grid.Row="0"
                FontSize="18"
                FontAttributes="Bold"
                x:Name="FolderLabel"
                HorizontalOptions="Center" />

            <Button 
                Text="Select APG Directory"
                FontAttributes="Bold"
                Grid.Row="1"
                SemanticProperties.Hint="Allows you to pick a folder on the filesystem"
                Clicked="OnPickFolderClicked"
                HorizontalOptions="Center" />

            <Button
                x:Name="startBtn"
                Text="Start"
                SemanticProperties.Hint="Start APG Servises"
                Clicked="OnStartClicked"
                HorizontalOptions="Center"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
